#!/usr/bin/bash
source functions
source debug

d "View starting"
if [ -z "$1" ]; then
    d "Viewing current values"
    profile=$(current_profile)
else
    if profile=$(load_profile "$1");then
        d "Loading profile '$1'"
    else
        echo "Failed to load profile ($?)" >&2
        exit 1
    fi
fi
echo $profile | perl -p -e 's/ /\n/g' | perl -p -e 's/=/ -> /g'
